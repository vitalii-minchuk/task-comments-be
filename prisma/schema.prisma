// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgres://postgres@localhost:5432/comments"
}

model User {
  id          String   @id @default(cuid())
  username    String
  email       String   @unique
  password    String
  homePageUrl String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("users")
}
